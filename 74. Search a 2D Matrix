class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int m = matrix.length;
        int n = matrix[0].length;
        int target_row = 0;
        for(int i =0; i<m; i++)
        {
            if(target<=matrix[i][n-1])
            {
                if(target==matrix[i][n-1])
                {
                    return true;
                }
                else
                {
                    target_row = i;
                    break;
                }
            }
        }
        
        for(int i =0;i<n; i++)
        {
            if(matrix[target_row][i] == target)
            {
                return true;
            }
        }
        
        return false;
    }
}
